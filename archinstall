#!/usr/bin/env sh
#
# Before executing, you must have mounted the formatted drives to /mnt.
# This includes /, /home and /boot/EFI. If you would like to have more 
# partitions/drives, you must manage them after the installation.
# You must also be connected to the internet.
#
# Example execution: ./archinstall 'nvme0n1p4' 'nvme0n1p5' 'sda6' '!WSVf6wS5Sj!_mq' 'xphyro' 'gWEGg124!!ggpqA' 'wpa' 'xphyro-2.4' '1k51345!25sddsgg5!' 'y'

willexit=0

[ "$( echo "$PWD" | sed 's/.*\///' )" = "archinstall" ] || { echo "This script must be run from the root folder of the repository."; willexit=1; }
[ "$6" = "" ] && { echo "You must call this script with at least 6 arguments: efi_partition, root_partition, home_partition, root_passwd, user, user_password."; printf "All arguments:\nefi_partition, root_partition, home_partition, root_passwd, user, user_password, wireless_security, wirelss_ssid, wireless_password, wireless_hidden\n"; willexit=1; }
if ! [ "$( curl -Is https://www.google.com | head -n 1 | awk '{print $2}' )" = "200" ]
then
    if [ "$7" ] && [ "$8" ] && [ "$9" ] && [ "${10}" ] 
    then
        interface="$( iw dev | grep Interface | awk '{print $2}' )"
        printf "Description='A simple %s encrypted wireless connection'\nInterface=$interace\nConnection=wireless\nSecurity=%s\nIP=dhcp\nESSID='%s'\nKey='%s'\n" "$7" "$7" "$8" "$9" > /etc/netctl/wirelessconf
        [ "${10}" = "y" ] && echo "Hidden=yes" >> /etc/netctl/wirelessconf
        olddir="$( pwd )"
        cd /etc/netctl || exit 1
        netctl start wirelessconf || willexit=1
        cd "$olddir" || exit 1

        if [ "$( curl -Is https://www.google.com | head -n 1 | awk '{print $2}' )" = "200" ] 
        then
            wireless=1
        else
            echo "Could not connect to the internet."
            willexit=1
        fi
    else
        echo "You are not connected to the internet."
        willexit=1
    fi
fi

[ "$willexit" = "0" ] || exit "$willexit"

mkfs.fat -F32 "/dev/$1"
mkfs.ext4 "/dev/$2"
mkfs.ext4 "/dev/$3"

mount "/dev/$2" /mnt
mkdir /mnt/home
mount "/dev/$3" /mnt/home

pacman -Sy --noconfirm archlinux-keyring

pacstrap /mnt base base-devel dhcpcd dialog dosfstools efibootmgr git grub libgl linux linux-firmware linux-headers linux-lts linux-lts-headers mesa mtools netctl network-manager-applet networkmanager nvidia nvidia-libgl nvidia-lts openssh os-prober pacman-contrib reflector util-linux vim wireless_tools wpa_supplicant xf86-video-intel xorg xorg-server zsh

genfstab -U /mnt >> /mnt/etc/fstab

[ "$wireless" = "1" ] && cp /etc/netctl/wirelessconf /mnt/etc/netctl/wirelessconf
cp -r archinstall-chroot root /mnt
arch-chroot /mnt /archinstall-chroot "$1" "$4" "$5" "$6" | tee archinstall-chroot.log

umount -a
reboot
